{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["id", "name", "severity", "summary", "description", "mitigations", "code_signals"],
  "properties": {
    "id": { "type": "string" },
    "name": { "type": "string" },
    "severity": { "type": "string" },
    "summary": { "type": "string" },
    "description": { "type": "string" },
    "mitigations": { "type": "array", "items": { "type": "string" } },
    "code_signals": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "description", "heuristics"],
        "properties": {
          "id": { "type": "string" },
          "description": { "type": "string" },
          "heuristics": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "pattern": { "type": "string" },
                "regex": { "type": "string" },
                "flags": { "type": "string" },
                "all_of": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "pattern": { "type": "string" },
                      "regex": { "type": "string" }
                    }
                  }
                },
                "window": { "type": "integer" },
                "pattern_ref": { "type": "string" }
              }
            }
          }
        }
      }
    },
    "languages": { "type": "array", "items": { "type": "string" } },
    "output_schema": {
      "type": "object",
      "properties": {
        "requires_mitigations": { "type": "boolean" },
        "allowed_status_values": { "type": "array", "items": { "type": "string" } }
      }
    }
  }
}
