{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://astha.ai/schemas/scantheplanet/scan-summary.schema.json",
  "title": "ScanSummary",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "status": { "type": "string", "enum": ["pass", "fail", "unknown"] },
    "summary": { "type": "string" },
    "findings": {
      "type": "array",
      "items": { "$ref": "#/definitions/ScanFinding" }
    },
    "scannedAtUtc": { "type": "string" },
    "filesScanned": { "type": "integer", "minimum": 0 },
    "chunksAnalyzed": { "type": "integer", "minimum": 0 },
    "chunksFailed": { "type": "integer", "minimum": 0 },
    "modelSupport": { "type": "array", "items": { "type": "string" } }
  },
  "required": ["status", "summary", "findings", "scannedAtUtc"],
  "definitions": {
    "ScanFinding": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "techniqueId": { "type": "string" },
        "techniqueName": { "type": "string" },
        "severity": { "type": "string" },
        "file": { "type": "string" },
        "startLine": { "type": "integer", "minimum": 1 },
        "endLine": { "type": "integer", "minimum": 1 },
        "observation": { "type": "string" }
      },
      "required": ["techniqueId", "severity", "file", "startLine", "endLine", "observation"]
    }
  }
}
