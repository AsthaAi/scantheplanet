{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://astha.ai/schemas/scantheplanet/scan-config.schema.json",
  "title": "ScanConfig",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "allowRemoteProviders": { "type": "boolean", "default": false },
    "allowedProviders": { "type": "array", "items": { "type": "string" } },
    "modelNames": { "type": "array", "items": { "type": "string" } },
    "openaiApiKey": { "type": "string" },
    "anthropicApiKey": { "type": "string" },
    "geminiApiKey": { "type": "string" },
    "ollamaEndpoint": { "type": "string" },
    "retryMaxRetries": { "type": "integer", "minimum": 0 },
    "retryDelayMs": { "type": "integer", "minimum": 0 },
    "timeoutMs": { "type": "integer", "minimum": 0 },
    "includeExtensions": { "type": "array", "items": { "type": "string" } },
    "excludeExtensions": { "type": "array", "items": { "type": "string" } },
    "includeGlobs": { "type": "array", "items": { "type": "string" } },
    "excludeGlobs": { "type": "array", "items": { "type": "string" } },
    "maxFileBytes": { "type": "integer", "minimum": 0 },
    "excludePatterns": { "type": "array", "items": { "type": "string" } },
    "includeOverride": { "type": "array", "items": { "type": "string" } },
    "excludeDocs": { "type": "boolean" },
    "excludeTests": { "type": "boolean" },
    "llmReview": { "type": "boolean" },
    "adaptiveChunking": { "type": "boolean" },
    "maxPromptTokens": { "type": "integer", "minimum": 1 },
    "reserveOutputTokens": { "type": "integer", "minimum": 0 },
    "gatingEnabled": { "type": "boolean" },
    "shadowSampleRate": { "type": "number", "minimum": 0, "maximum": 1 }
  }
}
